# Example environment configuration (do not put real secrets in VCS)
# Copy to .env and fill in values locally. .env is gitignored.

# Azure Communication Services Configuration
ACS_CONNECTION_STRING=endpoint=https://<your-acs-resource>.<region>.communication.azure.com/;accesskey=<redacted>

# Callback URL for webhooks (ngrok or your public host)
CALLBACK_URI_HOST=https://<your-public-host>

# Agent Mode Connection Configuration
AGENT_ID=<your-agent-id>
AGENT_PROJECT_NAME=<your-project-name>
AZURE_AGENT_ENDPOINT=https://<your-agent-endpoint>.services.ai.azure.com
# Optional: Provide a short-lived token for local dev; otherwise AAD is used
ACCESS_TOKEN=

# Voice Configuration for Richard
# Built-ins: alloy, ash, ballad, coral, echo, sage, shimmer, verse
RICHARD_VOICE=echo
# To force sending session.voice to the service, set to true (default false)
FORCE_SESSION_VOICE=false

# IT Tools Server Configuration
IT_TOOLS_BASE_URL=https://<your-tools-api>

# Azure AI Search (optional)
AZURE_SEARCH_ENDPOINT=https://<your-search>.search.windows.net
AZURE_SEARCH_KEY=
AZURE_SEARCH_POLICY_INDEX=it-policies

# Azure Storage (optional)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_POLICIES_CONTAINER=eikenappaudioblob

